@using Proje.BLL.Models.DTOs.MenuDTOs
@using Proje.DATA.Entities
@model CreateMenuDTO


<h1>Menü Ekle</h1>

<div class="row">
    <div class=" col-md-4">
        <form asp-controller="Menu" asp-action="Create" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="Adi" class="control-label">Menü Adı</label>
                <input name="Adi" placeholder="Menü Adı" asp-for="Adi" class="form-control" />
                <span asp-validation-for="Adi" class="text-danger"></span>

                <label asp-for="Fiyat" class="control-label">Menü Fiyatı</label>
                <input name="Fiyat" type="number"  min="0" placeholder="1.0" step="0.1" asp-for="Fiyat" class="form-control" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Menü Fiyatı</label>
                <input type="file" asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>


            <div class="form-group">
                <button class="btn btn-outline-primary">Menu Olustur</button>
            </div>
        </form>
    </div>
</div>

<div asp-validation-summary="All" class="bg-danger text-white"></div>
