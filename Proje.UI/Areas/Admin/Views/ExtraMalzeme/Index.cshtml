@using Proje.DATA.Entities
@model List<ExtraMalzeme>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-6 offset-3 grid-margin stretch-card">
    <div class="card">
        <div class="card-header">
            <div class="card-body">
                <h4 class="card-title">Ekstra Malzeme Listesi</h4>
                <br />
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ekstra Malzeme Adı</th>
                            <th>Fiyatı</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Adi 
                                </td>
                                <td>
                                    @item.Fiyat ₺
                                </td>
                                <td>
                                    <button class="btn btn-info"><a asp-action="Edit" asp-controller="ExtraMalzeme" asp-area="Admin" asp-route-id="@item.ID">Düzenle</a></button> |
                                    <button class="btn btn-info"><a asp-action="Delete" asp-controller="ExtraMalzeme" asp-area="Admin" asp-route-id="@item.ID">Sil</a></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <br />
    <p>
        <a class="btn btn-success d-flex align-items-start justify-content-center text-white" asp-action="Create">Yeni Ekstra Malzeme Ekle</a>
    </p>
</div>
