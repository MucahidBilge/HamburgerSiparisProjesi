@using Microsoft.AspNetCore.Identity;
@using Proje.BLL.Models.DTOs;
@using Proje.DATA.Entities;
@using Proje.DATA.Enums;
@model SiparisOlusturDTO
@inject UserManager<AppUser> UserManager
@{
    ViewData["Title"] = "SiparisOlustur";
    AppUser user = await UserManager.GetUserAsync(User);
}

<div class="container-xxl py-5 bg-dark  mb-5">
    <div class="container text-center my-5 pt-5 pb-4">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Sipariş Oluştur</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-9">
            <section class="products">
                @foreach (Menu menu in Model.Menuler)
                {
                    <div class="all-products">
                        <div class="product">
                            <img class="img-fluid" src="data:image/jpeg;base64,@Convert.ToBase64String(menu.Fotograf)">
                            <div class="product-info">
                                <h4 class="product-title">
                                    @menu.Adi
                                </h4>
                                <p class="product-price">@menu.Fiyat</p>
                                <button class="btn product-btn btn-primary" onclick="SiparisGonder(@menu.ID)">Sepete Ekle</button>
                            </div>
                        </div>
                    </div>
                }
            </section>
        </div>
        <div class="col-3" id="siparisListesi">
            <table class="table table-hover table-warning">
                <tr>
                    <th>Ürünleriniz</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </table>
            <input type="hidden" id="ekleme" value="1" />
        </div>
    </div>
</div>
<div>
    <input type="hidden" value="@user.Id" id="userID" />
    <input type="hidden" value="@Boyut.Küçük" id="boyut" />
    <input type="hidden" value="1" id="adet" />
</div>








